@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form method="post">
    @Html.ValidationSummary(false)
    @Html.LabelFor(p => p.Email)
    @Html.TextBoxFor(p => p.Email)
    @Html.LabelFor(p => p.Password)
    @Html.PasswordFor(p => p.Password)
    <button type="submit">Login</button>
</form>

